@model HastaneRandevuSistemi.Models.Doktor
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container" style="margin-top:20px;">
    @using (Html.BeginForm("Guncel", "DoktorAdmin", FormMethod.Post))
    {
            <div class="form-group">
                <label style="margin-top:10px;">Hastane Adı</label>
            @Html.DropDownListFor(m => m.Hastane.HastaneID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control w-50", style = "margin-top:5px;" })
                <label style="margin-top:10px;">Klinik Adı</label>
            @Html.DropDownListFor(m => m.Pol.PolID, (List<SelectListItem>)ViewBag.mrklr, new { @class = "form-control w-50", style = "margin-top:5px;" })
                <label style="margin-top:10px;">Doktor Adı</label>
            @Html.TextBoxFor(m => m.DoktorAd, new { @class = "form-control w-50", style = "margin-top:5px;" })

                <div style="margin-top:20px;">
                    <button class="btn btn-warning">Doktor Güncelle</button>
                </div>
            </div>
    }
</div>